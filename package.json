{
  "name": "@lokiverse/tsconfig",
  "version": "0.2.0",
  "private": false,
  "description": "TypeScript configurations",
  "author": {
    "name": "Loïk Fekkaï",
    "email": "loikfekkai@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "tsconfig",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lokicoule-stack/tsconfig.git"
  },
  "homepage": "https://github.com/lokicoule-stack/tsconfig/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/lokicoule-stack/tsconfig/issues"
  },
  "scripts": {
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "exports": {
    ".": "./src/base.json",
    "./base": "./src/base.json",
    "./runtime/node": "./src/runtimes/node.json",
    "./runtime/browser": "./src/runtimes/browser.json",
    "./frameworks/react": "./src/frameworks/react.json",
    "./frameworks/vite": "./src/frameworks/vite.json",
    "./presets/lib-base": "./src/presets/lib-base.json",
    "./presets/lib-node": "./src/presets/lib-node.json",
    "./presets/lib-browser": "./src/presets/lib-browser.json",
    "./presets/lib-react": "./src/presets/lib-react.json"
  },
  "files": [
    "src/base.json",
    "src/runtimes/*.json",
    "src/frameworks/*.json",
    "src/presets/*.json"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "latest",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@lokiverse/changesets-config": "^0.1.0"
  }
}
