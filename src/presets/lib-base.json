{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Library Base Configuration",
  "extends": "../base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "importHelpers": true,

    "composite": true,
    "incremental": true,

    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "examples",
    "tests"
  ]
}
